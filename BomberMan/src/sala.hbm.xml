<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping">
<hibernate-mapping>
	<class name="database.Sala" table="SALA">
		<id column="ID" name="ID" type="int">

			<generator class="increment" />
		</id>

		<property column="NOMBRE" name="Nombre" type="string" />
		<property column="CANTJUGADORES" name="CantJugadores"
			type="int" />
		<property column="IP" name="IP" type="string" />
		<property column="PUERTO" name="Puerto" type="int" />
		<property column="ESTADO" name="Estado" type="int" />
	</class>
</hibernate-mapping>